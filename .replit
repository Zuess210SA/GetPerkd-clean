modules = ["nodejs-20", "web", "postgresql-16"]
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["unzip"]

[deployment]
deploymentTarget = "server"
run = ["npm", "run", "start"]

[[ports]]
localPort = 3000
externalPort = 3000

[workflows]
runButton = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build && npm run start"
waitForPort = 3000

[agent]
integrations = [
  "javascript_stripe==1.0.0",
  "javascript_sendgrid==1.0.0",
  "javascript_websocket==1.0.0",
  "javascript_supabase==1.0.0",
  "javascript_openai==1.0.0",
  "javascript_database==1.0.0"
]
